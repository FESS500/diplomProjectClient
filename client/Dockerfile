# Используем официальный образ Node.js
FROM node:20.11.1

# Устанавливаем рабочую директорию внутри контейнера
WORKDIR /usr/src/app

# Копируем package.json и package-lock.json и устанавливаем зависимости
COPY package*.json ./
RUN npm install

# Копируем все файлы приложения внутрь контейнера
COPY . .

# Экспортируем порт, на котором работает ваше приложение
EXPOSE 3000

# Команда для запуска вашего приложения
CMD ["npm", "start"]
